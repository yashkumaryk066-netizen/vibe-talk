# üîê VibeTalk Backend - Environment Variables Template
# Copy this to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-get-random-secret-key
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com,.vercel.app

# Database (PostgreSQL for Production)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS Settings
FRONTEND_URL=https://vibe-talk-premium-live.netlify.app

# Media Storage (AWS S3 or Cloudinary)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Redis (for caching & websockets)
REDIS_URL=redis://localhost:6379/0

# Sentry (Error Tracking)
SENTRY_DSN=

# Email Settings (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Payment Gateway (Razorpay/Stripe)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Agora.io (Voice/Video Calls)
AGORA_APP_ID=
AGORA_APP_CERTIFICATE=

# Production Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
